@model ProyectoCat.Models.Usuario

@{
    ViewData["Title"] = "Detalle";
}
@if (Session.Administrador)
{
    Layout = "Admin";

}
@if (Session.Activo)
{
    <link href="~/css/style.css" rel="stylesheet" />

    <br />
    <h3 style="color:antiquewhite">Ver Detalle Usuario</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt style="color:antiquewhite">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd style="color:antiquewhite">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt style="color:antiquewhite">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd style="color:antiquewhite">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt style="color:antiquewhite">
            @Html.DisplayNameFor(model => model.Administrador)
        </dt>
        <dd style="color:antiquewhite">
            @Html.DisplayFor(model => model.Administrador)
        </dd>
        <dt style="color:antiquewhite">
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </dt>
        <dd style="color:antiquewhite">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt style="color:antiquewhite">
            @Html.DisplayNameFor(model => model.Contrasenna)
        </dt>
        <dd style="color:antiquewhite">
            @Html.DisplayFor(model => model.Contrasenna)
        </dd>
       
    </dl>

    <div>
        <a class="btn btn-default" asp-action="Index"><span class="glyphicon glyphicon-arrow-left"></span></a>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ID">Editar</a>
    </div>
}
@if (Session.Activo == false)
{

    Layout = "Login";

    <img src="https://www.seminuevos.com/assets/brands/vehiclesBrands/png/caterpillar.png" />
    <h4>Lo sentimos, no se ha registrado!</h4>
}