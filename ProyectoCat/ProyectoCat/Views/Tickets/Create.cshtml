@model ProyectoCat.Models.Tickets
@{
    ViewData["Title"] = "Nuevo";
}
@if (Session.Administrador)
{
    Layout = "Admin";

}
@if (Session.Activo)
{
    <link href="~/css/style.css" rel="stylesheet" />

    <br />
    <div class="row">
        <div id="registro" class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <br /><h4 style="color:antiquewhite"><strong>Nuevo Registro</strong></h4>
                <br />
                <div class="form-group">
                    <label asp-for="Título" style="color:antiquewhite" class="control-label"></label>
                    <input asp-for="Título" class="form-control" />
                    <span asp-validation-for="Título" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Detalle" style="color:antiquewhite" class="control-label"></label>
                    <textarea asp-for="Detalle" class="form-control"></textarea>
                    <span asp-validation-for="Detalle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reporta" style="color:antiquewhite" class="control-label"></label>
                    <input asp-for="Reporta" class="form-control" />
                    <span asp-validation-for="Reporta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClienteId" style="color:antiquewhite" class="control-label"></label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="EstadoId" style="color:antiquewhite" class="control-label"></label>
                    <select asp-for="EstadoId" class="form-control" asp-items="ViewBag.EstadoId"></select>
                </div>
                <br />
                <div class="form-group">
                    <a class="btn btn-default" asp-action="Index"><span class="glyphicon glyphicon-arrow-left"></span></a>
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
}
@if (Session.Activo == false)
{

    Layout = "Login";

    <img src="https://www.seminuevos.com/assets/brands/vehiclesBrands/png/caterpillar.png" />
    <h4>Lo sentimos, no se ha registrado!</h4>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
